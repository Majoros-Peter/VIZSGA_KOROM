<Window x:Class="Autoform.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Autoform"
        mc:Ignorable="d"
        Title="Autók" Height="450" Width="800">
    <StackPanel>
        <DataGrid x:Name="dgDagiDaganat"/>

        <Button Content="Betölt" Click="Betolt_Click"/>

        <StackPanel>
            <Label Content="Gyártási év:"/>
            <TextBox x:Name="txtGyartasiEv"/>
            <Button Content="Keres" Click="Button_Click"/>
        </StackPanel>

        <ListBox x:Name="lbIdk"/>

        <Button Content="Kilépés" Click="Exit_Click"/>
    </StackPanel>
</Window>
